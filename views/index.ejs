<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dynamic Page</title>

    <style>
      body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-color: rgb(68, 68, 65);
      }

      .container {
        text-align: center;
        width: 100%;
        max-width: 600px;
      }

      input {
        padding: 15px;
        font-size: 16px;
        border: 2px solid #545148;
        border-radius: 25px;
        outline: none;
        transition: border-color 0.3s, box-shadow 0.3s;
        width: 200px;
        margin-top: 20px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        background-color: white;
      }

      input:focus {
        border-color: #a777e3;
        box-shadow: 0 0 10px rgba(174, 123, 227, 0.5);
      }

      #items-container .item {
        width: 600px;
        height: 60px;
        background-color: white;
        margin-bottom: 20px;
        border-radius: 25px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        text-align: left;
        font-size: 1.5em;
        padding-left: 10px;
        font-family: Arial, Helvetica, sans-serif;
        transition: box-shadow 0.3s;
      }

      #submitBtn {
        background: linear-gradient(135deg, #deb23b, #e2b12a);
        border: none;
        border-radius: 25px;
        color: white;
        padding: 10px 25px;
        font-size: 18px;
        cursor: pointer;
        transition: background 0.3s, transform 0.3s;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 style="color: white">Item Quantity</h1>
      <input
        type="number"
        id="quantity"
        placeholder="Enter quantity"
        style="width: 200px"
        min="1"
        max="10"
      />
      <button id="submitBtn">Submit</button>
    </div>

    <div id="items-container"></div>

    <script>
      function createItems() {
        const numberOfItems = parseInt(
          document.getElementById('quantity').value
        )
        const container = document.getElementById('items-container')
        container.innerHTML = ''

        for (let i = 0; i < numberOfItems; i++) {
          const item = document.createElement('div')
          item.className = 'item'
          item.innerText = i + 1
          container.appendChild(item)
        }
      }

      document
        .getElementById('submitBtn')
        .addEventListener('click', createItems)
    </script>
  </body>
</html>
